<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <servlet>
  	<servlet-name>EmployeeServlet</servlet-name>
  	<display-name>EmployeeServlet</display-name>
  	<description>Servlet for Employee Page</description>
  	<servlet-class>com.revature.servlets.EmployeeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description>Servlet for Login Page</description>
  	<servlet-class>com.revature.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ManagerServlet</servlet-name>
  	<display-name>ManagerServlet</display-name>
  	<description>Servlet for Manager Page</description>
  	<servlet-class>com.revature.servlets.ManagerServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>viewInfo</servlet-name>
  	<display-name>viewInfo</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.viewInfo</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Pending</servlet-name>
  	<display-name>Pending</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.Pending</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Resolved</servlet-name>
  	<display-name>Resolved</display-name>
  	<description></description>
  	<servlet-class>com.revature.servlets.Resolved</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeeServlet</servlet-name>
  	<url-pattern>/employee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ManagerServlet</servlet-name>
  	<url-pattern>/manager</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>viewInfo</servlet-name>
  	<url-pattern>/viewInfo</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Pending</servlet-name>
  	<url-pattern>/getPending</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Resolved</servlet-name>
  	<url-pattern>/getResolved</url-pattern>
  </servlet-mapping>
</web-app>

