<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xmlns="http://java.sun.com/xml/ns/javaee" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Project1ERS</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <!--  nothing goes to master yet, /requests/index.html uses ajax to call util/requests -->
  <servlet>
    <servlet-name>master-servlet</servlet-name>
    <servlet-class>com.revature.servlet.MasterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>master-servlet</servlet-name>
    <url-pattern>/unknown-use-case</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>login-servlet</servlet-name>
    <servlet-class>com.revature.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login-servlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>logout-servlet</servlet-name>
    <servlet-class>com.revature.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout-servlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>util-requests</servlet-name>
    <servlet-class>com.revature.servlet.RequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-requests</servlet-name>
    <url-pattern>/util/requests</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>util-employees</servlet-name>
    <servlet-class>com.revature.servlet.RosterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-employees</servlet-name>
    <url-pattern>/util/employees</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>util-profile</servlet-name>
    <servlet-class>com.revature.servlet.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-profile</servlet-name>
    <url-pattern>/util/profile</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>util-update</servlet-name>
    <servlet-class>com.revature.servlet.UpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-update</servlet-name>
    <url-pattern>/util/update</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>util-request-types</servlet-name>
    <servlet-class>com.revature.servlet.RequestTypesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-request-types</servlet-name>
    <url-pattern>/util/request-types</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>util-request-statuses</servlet-name>
    <servlet-class>com.revature.servlet.RequestStatusesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-request-statuses</servlet-name>
    <url-pattern>/util/request-statuses</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>util-new-request</servlet-name>
    <servlet-class>com.revature.servlet.NewRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-new-request</servlet-name>
    <url-pattern>/util/new-request</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>util-request</servlet-name>
    <servlet-class>com.revature.servlet.RequestDetailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-request</servlet-name>
    <url-pattern>/util/request</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>util-update-request</servlet-name>
    <servlet-class>com.revature.servlet.UpdateRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>util-update-request</servlet-name>
    <url-pattern>/util/update-request</url-pattern>
  </servlet-mapping>
  
</web-app>